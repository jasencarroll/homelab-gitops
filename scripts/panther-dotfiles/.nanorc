# Panther nanorc
# ==============

# Line numbers
set linenumbers

# Show cursor position
set constantshow

# Smooth scrolling
set smooth

# Auto-indent
set autoindent

# Tab to spaces
set tabsize 2
set tabstospaces

# Soft wrapping
set softwrap

# Smart home key
set smarthome

# Enable mouse
set mouse

# Show matching brackets
set matchbrackets "(<[{)>]}"

# Suspend with ^Z
set suspend

# Multiple buffers
set multibuffer

# History
set historylog
set positionlog

# Syntax highlighting (include all available)
include "/usr/share/nano/*.nanorc"
include "/usr/share/nano/extra/*.nanorc" 

# Custom colors (Tokyo Night inspired)
set titlecolor bold,white,blue
set promptcolor white,black
set statuscolor bold,white,blue
set errorcolor bold,white,red
set spotlightcolor black,yellow
set selectedcolor white,magenta
set stripecolor ,black
set scrollercolor white
set numbercolor cyan
set keycolor cyan
set functioncolor green

# YAML (for k8s manifests)
syntax "yaml" "\.ya?ml$"
color green "^[^ ].*:"
color brightblue "-.*"
color cyan "[0-9]+"
color yellow "".*""
color yellow "'.*'"
color brightmagenta "\b(true|false|null)\b"
color red "#.*$"
color brightwhite,blue "^---"

# Dockerfile
syntax "dockerfile" "Dockerfile.*"
color green "\b(FROM|RUN|CMD|LABEL|MAINTAINER|EXPOSE|ENV|ADD|COPY|ENTRYPOINT|VOLUME|USER|WORKDIR|ARG|ONBUILD|STOPSIGNAL|HEALTHCHECK|SHELL)\b"
color cyan "[0-9]+"
color yellow "".*""
color red "#.*$"

# Shell scripts
syntax "sh" "\.sh$" "\.bash$" "\.zsh$"
color green "\b(if|then|else|elif|fi|for|while|do|done|case|esac|function|return|exit|in)\b"
color cyan "\$\{?[A-Za-z_][A-Za-z0-9_]*\}?"
color yellow "".*""
color yellow "'.*'"
color red "#.*$"

# JSON
syntax "json" "\.json$"
color green ""[^"]*"\s*:"
color cyan "[0-9]+"
color yellow ""[^"]*""
color brightmagenta "\b(true|false|null)\b"

# Markdown
syntax "markdown" "\.(md|markdown)$"
color brightblue "^#.*"
color green "\*\*.*\*\*"
color yellow "\*.*\*"
color cyan "`[^`]*`"
color magenta "```.*$"
color white,blue "\[.*\]"
color green "\(http[^\)]*\)"

# TOML
syntax "toml" "\.toml$"
color green "^\[.*\]"
color brightblue "^[a-zA-Z_][a-zA-Z0-9_]*\s*="
color cyan "[0-9]+"
color yellow "".*""
color red "#.*$"

# Key bindings (more intuitive)
bind ^S savefile main
bind ^Q exit main
bind ^F whereis main
bind ^R replace main
bind ^G gotoline main
bind ^Z undo main
bind ^Y redo main
bind ^C copy main
bind ^V paste main
bind ^X cut main
